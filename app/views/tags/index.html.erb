<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |t| %>
    <li>
      <%= link_to t.name, tag_path(t), class: 'tag_name', id: "tag_#{t.id}" %>
      <%= link_to "Delete", tag_path(t), method: :delete, data: {confirm: "Really delete the tag?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Tag", new_tag_path, class: "new_tag" %>
